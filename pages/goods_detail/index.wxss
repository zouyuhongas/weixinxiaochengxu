page {
  padding-bottom: 90rpx;
}
.gd_swiper swiper {
  height: 500rpx;
}
.detail_price {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: 600;
}
.detail_name {
  display: flex;
  padding: 10rpx;
  border-bottom: 1rpx solid #ccc;
}
.detail_name .detail_name_wrap {
  flex: 5;
  display: -webkit-box;
  overflow: hidden;
  -webkit-line-clamp: 2;
  -webkit-box-orient: vertical;
  font-size: 32rpx;
  color: #000;
  border-right: 1rpx solid #000;
}
.detail_name .detail_name_collect {
  flex: 1;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: center;
}
.detail_name .detail_name_collect .icon-shoucang1 {
  color: orange;
}
.detail_info .detail_info_title {
  padding: 20rpx;
  border-bottom: 1rpx solid #ccc;
  color: var(--themeColor);
  font-size: 30rpx;
  font-weight: 600;
}
.btm_tool {
  position: fixed;
  width: 100%;
  height: 90rpx;
  left: 0;
  bottom: 0;
  border-top: 1px solid #ccc;
  background-color: #fff;
  display: flex;
}
.btm_tool .tool_item {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  position: relative;
}
.btm_tool .tool_item button {
  position: absolute;
  width: 100%;
  height: 100%;
  /* background-color: aqua; */
  opacity: 0;
  top: 0;
  left: 0;
}
.btm_tool .btn_cart,
.btm_tool .btn_buy {
  flex: 2;
  color: #fff;
  font-weight: 600;
}
.btm_tool .btn_cart {
  background-color: #ffa500;
}
.btm_tool .btn_buy {
  background-color: var(--themeColor);
}
